<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient
        android:angle="270"
        android:endColor="#ddd"
        android:startColor="#fff" />

    <!--
    Notice that we use android:bottomLeftRadius instead of right because of an Android bug, fixed in API 12. 
    
    See http://code.google.com/p/android/issues/detail?id=9161
    -->

    <corners
        android:bottomLeftRadius="7dp"
        android:topRightRadius="7dp" />

    <stroke
        android:width="1dp"
        android:color="#838383" />

</shape>