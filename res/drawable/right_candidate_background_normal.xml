<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient
        android:angle="270"
        android:endColor="#7fA3D3"
        android:startColor="#5e81b1" />

    <!--
    Notice that we use android:bottomLeftRadius instead of right because of an Android bug, fixed in API 12. 
    
    See http://code.google.com/p/android/issues/detail?id=9161
    -->

    <corners
        android:bottomRightRadius="7dp"
        android:topLeftRadius="7dp" />

    <stroke
        android:width="1dp"
        android:color="#42577d" />

</shape>