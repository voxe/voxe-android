<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient
        android:angle="90"
        android:endColor="@color/button_background_end"
        android:startColor="@color/button_background_start" />

    <!--
    Notice that we use android:bottomLeftRadius instead of right because of an Android bug, fixed in API 12. 
    
    See http://code.google.com/p/android/issues/detail?id=9161
    -->

    <corners
        android:bottomRightRadius="@dimen/button_corner_radius"
        android:topLeftRadius="@dimen/button_corner_radius" />

    <stroke
        android:width="@dimen/button_stroke_width"
        android:color="@color/button_stroke_color" />

</shape>